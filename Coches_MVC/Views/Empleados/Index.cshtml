@model IEnumerable<Coches_MVC.Models.Persona>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VerEmpleados</title>
</head>
<body>
    <div>
        <h1>Lista de empleados:</h1>
        <table class="table">
            <tr>
                <th>
                    ID Empleado
                </th>
                <th>
                    NIF
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Apellidos
                </th>
                <th>
                    Telefono
                </th>
                <th>
                    Direccion
                </th>
                <th>
                    Email
                </th>
                <th>
                    Modificar
                </th>
            </tr>

            @foreach (var empleado in Model)
            {
                <tr>
                    <td>
                        @empleado.ID_Persona
                    </td>
                    <td>
                        @empleado.NIF
                    </td>
                    <td>
                        @empleado.Nombre
                    </td>
                    <td>
                        @empleado.Apellidos
                    </td>
                    <td>
                        @empleado.Telefono
                    </td>
                    <td>
                        @empleado.Direccion
                    </td>
                    <td>
                        @empleado.Email
                    </td>
                    <td>
                        <a href="/Empleados/ModificacionEmpleado?cod=@empleado.ID_Persona">modifica?</a>
                    </td>
                </tr>
            }

        </table>
        <a href="/Empleados/AltaEmpleado">Agregar</a>
    </div>
</body>
</html>
